			<result name="success">/messages/recevied.jsp</result>
		</action>
		<action name="savePrivateMessage" class="com.job528.profile.action.MessageAction" method="savePrivateMessage">
			<result name="success">/common/pm_iterator.jsp</result>
		</action>
		<action name="deletePrivateMessage" class="com.job528.profile.action.MessageAction" method="deletePrivateMessage">
